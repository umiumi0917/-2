<div>
  <h3>Users Info</h3>
  <% if user.present? %>
  <h3><%= user.name %></h3>
  <h3><%= user.introduction %></h3>
  <%= image_tag user.get_profile_image(100,100) %>
  <% if user.id == current_user.id %>
    <p><%= link_to"",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%></p>
  <% end %>
  <% end %>
</div>
